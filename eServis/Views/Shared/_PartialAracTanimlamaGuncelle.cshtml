@model eServis.Entities.AracTanimlama
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/locales/bootstrap-datepicker.tr.min.js"></script>
<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />


<script>
    $(document).mouseup(function (e) {

        $('#tarih').Close();
      
    });
    $(document).ready(function () {
        $('#adi').prop('disabled', true);
        $("#tarih").datepicker({
            format: 'dd/mm/yyyy',
            language: 'tr',
        });

    });
</script>
@using (Html.BeginForm("Guncelle", "AracTanim", FormMethod.Post, new { @id = "ListeForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">

        <div class="col-8">

            @Html.DropDownList("Adi", null, htmlAttributes: new { @id = "DropArac", @class = "form-control" })


        </div>
        <div class="col-2">
            <input type="submit" id="btnYeni" value="Yeni Kayıt" class="btn btn-sm btn-dark" />
        </div>

    </div>
    &nbsp;


    <div class="form-group">
        @Html.LabelFor(model => model.Adi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Adi, new { htmlAttributes = new { @id = "adi",  @class = "datepicker form-control" } })
            @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @id = "tarih", @class = "datepicker form-control" } })
            @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Km, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Km, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Km, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tedarik, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tedarik, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tedarik, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ucret, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ucret, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ucret, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btnKaydet" type="submit" value="Kaydet" class="btn btn-dark" />
        </div>
    </div>
</div>

}
@Bootstrap.ModalPopup(id: "YeniKayıt", title: "Yeni Kayıt")



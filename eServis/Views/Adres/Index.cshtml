@model IEnumerable<eServis.Entities.Adres>

@{
    ViewBag.Title = "Index";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/simple-sidebar.css" rel="stylesheet" />


<div class="container mt-1">
    <div class="row">
        <div class="col-12">
            <a data-toggle="modal" data-target="#ModalAdres" class="btn btn-success"> Yeni Kayıt</a>
        </div>
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-4 mt-2 mb-2">

                <div class="card text-white" style=" width:100%; height:150px">
                    <div class="card-header" style="background-color:#000000 !important">

                        <button id="btnDelete" data-toggle="modal" data-target="#ModalAdresSil" data-delete-id="@item.Id" class="btn btn-sm  btn-danger">
                            <img src="~/Content/svg/trash.svg" />
                        </button>
                        <button id="btnDuzenle" data-toggle="modal" data-modal-id="@item.Id" data-target="#ModalAdresDuzenle" class="btn btn-sm  btn-light ">
                            <img src="~/Content/svg/pencil.svg" />

                        </button>
                    </div>
                    <div  class="card-body bg-dark">
                        <p class="mb-2 justify-content-center">  <b><a class="text-white" id="btnDetay" data-detay-id="@item.Id" href="/AdresTanim/Listele/@item.Id">@item.Baslik</a></b></p>
                    </div>

                    <div class="card-footer bg-dark">


                    </div>

                </div>


            </div>

        }
    </div>
</div>

@Bootstrap.ModalPopup(id: "ModalAdres", title: "Adres Ekle", showCloseButton: true)
@Bootstrap.ModalPopup(id: "ModalAdresDuzenle", title: ViewBag.Baslik + " Düzenle", showCloseButton: true)
@Bootstrap.ModalPopup(id: "ModalAdresSil", title: ViewBag.Baslik + " Sil", showCloseButton: true)
<script src="~/Scripts/Modal/ModalAdres.js"></script>